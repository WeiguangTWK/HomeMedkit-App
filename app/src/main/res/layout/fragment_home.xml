<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.application.homemedkit.fragments.FragmentHome">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_scan_code"
        style="@style/CardPickAction"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/ImageCardPickAction"
            android:contentDescription="@string/text_to_scan"
            android:src="@drawable/vector_scanner" />

        <TextView
            style="@style/TextCardPickAction"
            android:text="@string/text_data_matrix_scanner" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_add_self"
        style="@style/CardPickAction"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/ImageCardPickAction"
            android:contentDescription="@string/text_to_create"
            android:src="@drawable/vector_edit" />

        <TextView
            style="@style/TextCardPickAction"
            android:text="@string/text_self_medicine_adding" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>