<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="app_view"
        app:title="Вид приложения">

        <ListPreference
            app:defaultValue="new-old"
            app:entries="@array/sorting_types_name"
            app:entryValues="@array/sorting_types"
            app:key="sorting_order"
            app:persistent="true"
            app:title="@string/preference_sorting_type"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Home"
            app:entries="@array/fragment_pages_name"
            app:entryValues="@array/fragment_pages"
            app:key="default_start_fragment"
            app:persistent="true"
            app:title="@string/preference_start_page"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="app_system"
        app:title="Системные">

        <ListPreference
            app:defaultValue="Russian"
            app:entries="@array/languages_name"
            app:entryValues="@array/languages"
            app:key="language"
            app:persistent="true"
            app:title="@string/preference_language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="System"
            app:entries="@array/app_themes_name"
            app:entryValues="@array/app_themes"
            app:key="app_theme"
            app:persistent="true"
            app:title="@string/text_app_theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>