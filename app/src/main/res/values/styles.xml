<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardPickAction" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
    </style>

    <style name="TextCardPickAction" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">104dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
    </style>

    <style name="ImageCardPickAction">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextInputMedicineScanned" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">@color/md_theme_dark_outline</item>
        <item name="hintTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="EditTextMedicineScanned" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="TextInputIntake" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="AutoCompleteTextViewLayoutIntake" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="AutoCompleteTextViewIntake" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="CalendarDateLayoutIntake" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconDrawable">@drawable/vector_calendar_month</item>
        <item name="endIconMode">custom</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="CalendarDateIntake" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeMaxTextSize">14sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">date</item>
    </style>

</resources>